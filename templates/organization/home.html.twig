{% extends 'organization/base.html.twig' %}

{% block title %}Espace structure{% endblock %}

{% block body %}
    {{ include('misc/flash-messages.html.twig') }}

    <h1>{{ app.user }}</h1>

    <p>Semaine actuelle : du {{ 'this week' | date('d/m/Y') }} au {{ 'sunday this week' | date('d/m/Y') }}</p>
    <p><a class="btn btn-primary" href="{{ path('planning', { "preselect": 1 }) }}" role="button">Afficher les disponibilités de mes bénévoles pour la semaine actuelle</a></p>

    <p>Semaine prochaine : du {{ 'next week' | date('d/m/Y') }} au {{ 'sunday next week' | date('d/m/Y') }}</p>
    <p><a class="btn btn-primary" href="{{ path('planning', { "preselect": 2 }) }}" role="button">Afficher les disponibilités de mes bénévoles pour la semaine prochaine</a></p>

    <hr>

    <p><button class="btn btn-primary" role="button" disabled>Afficher la liste de mes bénévoles inscrits</button></p>
    <p><a class="btn btn-primary" href="{{ path('app_organization_commissionable_assets') }}" role="button">Afficher la liste de mes véhicules</a></p>

    <hr>

    <p><button class="btn btn-primary" role="button" disabled>Afficher la liste de mes structures</button></p>

    <p><a class="btn btn-primary" href="{{ path('planning') }}" role="button">Afficher les disponibilités des bénévoles</a></p>
{% endblock %}
